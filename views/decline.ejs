<html>
  <head>
    <title>Decline a bot - ModPortal - DBR</title>
    <% include ./partials/portalHeader.ejs %>
  </head>
  <body>
    <% include ./partials/nav.ejs %>
    <div class="container">
      <h1>
        <%= username %> - Decline
      </h1>
      <hr><br>
      <form action="/modportal/declineact" method="POST" enctype="application/x-www-form-urlencoded">
        <center>
      Why do you want to decline this bot?<div style="color:red;display:inline-block;margin-bottom:0.5rem;">*</div><br>
            <select id="newreason" name="reasonze" class="txtarea" style="width:250px;" onchange="lol()">
      <option value="none" selected disabled>Add quick reason...</option>
      <option value="offline">Offline</option>   
              <option value="nonenglish">Not english</option>
                <option value="una">Adds user to server unauthorized</option>
                <option value="4">Lack of working commands</option>
                <option value="5">Not 6 commands for multi purpose</option>
                <option value="6">Help not working</option>
                <option value="7">Invalid description</option>
               <option value="8">Owner Banned</option>
      
    </select>
          <br><br>
               Characters typed: <br>
        <div id="charcount">
          <code>0/1967</code>
          </div>
          <textarea class="txtarea" style="width:500px;height:400px" maxlength="1967" rows="30" id="longdesc" name="reason" required onkeyup="charc(this.value)"></textarea>
        <div id="extra">
          
        </div>
      <br><br>
        <input type="hidden" name="cli_id" value="<%= cli_id %>">
      <input type="hidden" name="decliner" value="<%= user.id %>">
      <input type="submit" class="btn btn-warning" title="Decline" value="Decline"></input>&nbsp;&nbsp;<a href="/modportal/queue" class="btn btn-warning" title="Back">Back</a>
             <script>
function lol() {
 if(document.getElementById('newreason').value === "nonenglish") {

    document.getElementById('longdesc').innerText = 'Your bot does not support 80% or not supporting english at all.'
 
  
   } else if(document.getElementById('newreason').value === "offline") {
 
    document.getElementById('longdesc').innerText = 'Your bot was offline during testing.'

   } else if(document.getElementById('newreason').value === "una") {
 
    document.getElementById('longdesc').innerText = "Your bot requires 'join servers for you' during OUATH, adding users to servers unauthorized is not allowed on our bot list."
               } else if(document.getElementById('newreason').value === "4") {
    document.getElementById('longdesc').innerText = "Your bot does not have 80% or more working commands, please check them and fix them then re-submit."
               } else if(document.getElementById('newreason').value === "5") {
   
    document.getElementById('longdesc').innerText = "Your bot does not have 6 or more commands."
               } else if(document.getElementById('newreason').value === "6") {
   
    document.getElementById('longdesc').innerText = "Your bot's help command is not working/does not exist at all. "
               } else if(document.getElementById('newreason').value === "7") {
    
    document.getElementById('longdesc').innerText = "Your bot's description is filled with junk/uneccessary information that is not related to your bot. Please write a more detailed description about your bot."
               }else if(document.getElementById('newreason').value === "8") {
    
    document.getElementById('longdesc').innerText = "Owner banned."
               }
}
</script>
              <script>
    function charc(str) {
	var lng = str.length;
	document.getElementById("charcount").innerHTML = "<code>" + lng + '/1967</code>';
    }
        </script>
        </center>
      </form><br><br>

  </body>
</html>
  
      
